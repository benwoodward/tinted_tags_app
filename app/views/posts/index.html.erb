<h1>Listing posts</h1>

<ul>
  <% @tags.each do |tag| %>
    <li style="background-color: <%= tag.tag_colour %>; display: inline-block;">
      <%= tag.name %>
    </li>
  <% end %>
</ul>
<table>
  <tr>
    <th>Title</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td>
      <%= post.tags.map { |t| %> <% t.name }.join(', ') %>
    </td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
